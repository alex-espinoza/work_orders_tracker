<h1>Create a new work order</h1>

<%= form_for [@team, @order] do |f| %>
	<% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this work order from being created:</h2>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<div><%= f.label :name, "Work order name" %><br />
	<%= f.text_field :name %></div>

	<div><%= f.label :description %><br />
	<%= f.text_area :description, :size => "40x10" %></div>

	<div><%= f.label :worker_id %><br />
	<%= f.select :worker_id, User.get_all_users_in_team_for_assignment, include_blank: true %></div>

	<div><%= f.submit "Create work order" %></div>
<% end %>