<%= form_for [@team, @invitation] do |f| %>
	<% if @invitation.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@invitation.errors.count, "error") %> prohibited this invitation from being sent:</h2>

			<ul>
			<% @invitation.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
		</div>
	<% end %>


	<div class="control-group"><%= f.label :recipient_email, "Email address", :class => "control-label" %>
	<div class="controls"><%= f.text_field :recipient_email, :class => "span4" %></div></div>

	<div class="controls"><p><%= f.submit "Invite worker", :class => "btn btn-primary span4" %></p>
<% end %>