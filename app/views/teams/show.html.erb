<h1>Teams#show</h1>

<p><%= link_to "Add worker to team", new_team_team_invitation_path(@team) %></p>

<% if can? :new, Order %>
	<p><%= link_to "Create work order", new_team_order_path(@team) %></p>
<% end %>

<h3>Work Orders</h3>
	<table>
		<tr>
			<td>Name</td>
		</tr>
		<% @team.orders.each do |order| %>
		<tr>
			<td><%= link_to order.name, team_order_path(@team, order) %> | <%= order.status.capitalize %></td>
		</tr>
		<% end %>
	</table>

	<p><%= link_to "Back", teams_path %></p>
